{
  "version": 2,
  "builds": [
    {
      "src": "backend/app/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/app/main.py"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "SECRET_KEY": "@secret_key",
    "JWT_ALGORITHM": "HS256",
    "ACCESS_TOKEN_EXP_MINUTES": "1440",
    "CORS_ORIGINS": "[\"*\"]",
    "OPENAI_API_KEY": "@openai_api_key",
    "OPENAI_MODEL": "gpt-4o-mini",
    "OPENAI_ENABLED": "false",
    "APP_NAME": "FoodBridge"
  }
}
